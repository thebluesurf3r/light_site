@use 'sass:math'; // Import the math module for division

// Constants
$pi: 3.141592;
$ratio: 1.618034;

// Defining Main Parameters
$base-margin: $pi * $ratio * 2px;
$base-padding: math.div($base-margin * $ratio, 1);
$base-font-size: math.div($base-margin * $pi, $ratio);

$padding-small: math.div($base-padding * 0.3, $pi);
$margin-small: math.div($base-margin * 1.5, $pi);
$margin-medium: math.div($base-margin * 3, $pi);
$margin-large: math.div($base-margin * 6, $pi);
$font-size-large: $base-font-size * $ratio * $pi;

// Base colors
$strong-color: #ffffff;
$blue-color: #00025f;
$header-background-color: #222222;
$button-background-color: blue;
$button-hover-background-color: #124d4a;
$button-active-background-color: #64727c;
$background-color: black;

// Function to adjust color using a multiplier
@function adjust-color($color, $multiplier) {
    $r: math.min(math.max(red($color) * $multiplier, 0), 255);
    $g: math.min(math.max(green($color) * $multiplier, 0), 255);
    $b: math.min(math.max(blue($color) * $multiplier, 0), 255);
    @return rgb($r, $g, $b);
}

// Apply multipliers to colors
$text-color-mod: adjust-color(#fefff0, $pi * 0.3);
$strong-color-mod: adjust-color($strong-color, $pi * 0.15);
$header-background-color-mod: adjust-color($header-background-color, $ratio);
$button-background-color-mod: adjust-color($button-background-color, $ratio * 3.6);
$button-hover-background-color-mod: adjust-color($button-hover-background-color, $pi * 6.2);
$button-active-background-color-mod: adjust-color($button-active-background-color, $pi * 12.4);
$blue-color-mod: adjust-color($blue-color, $ratio * 18);

body {
    background-color: $background-color;
    color: $text-color-mod;
    font-family: 'Ubuntu', sans-serif;
    margin: 0;
    padding: 0;
}

header {
    background-color: $header-background-color-mod;
    color: $strong-color-mod;
    padding: $base-padding;
    text-align: center;
}

header h1 {
    margin: $margin-medium;
    font-size: $font-size-large;
    color: $background-color;
}

main {
    padding: $padding-small;
    margin: math.div($margin-large * $ratio, 1);
}

h2, h3 {
    color: $strong-color;
}

section {
    margin-bottom: math.div($margin-large * $ratio, 1);
}

a {
    color: $blue-color-mod;
    transition: color 0.3s ease;

    &:hover {
        color: lighten($blue-color-mod, 20%);
        text-decoration: solid;
        animation: colorChange 1s infinite alternate;
    }
}

ul, ol {
    margin-left: $margin-small;
}

strong {
    color: $strong-color-mod;
}

@media (max-width: 768px) {
    .sidebar {
        position: static;
        width: 100%;
        height: auto;
    }
    main {
        margin-left: 0;
    }
}

.center-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;

    div {
        width: 80%;
        margin: 0 auto;
    }
}

@keyframes colorChange {
    0% {
        color: $blue-color-mod;
    }
    100% {
        color: lighten($blue-color-mod, 20%);
    }
}

.upload-csv-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: $base-padding;

    table {
        margin: $margin-medium 0;
        border-collapse: collapse;

        th, td {
            border: 1px solid #ddd;
            padding: $margin-small;
        }

        th {
            background-color: lighten($background-color, 10%);
        }
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: $margin-small;

        button {
            margin-top: $margin-small;
        }
    }
}